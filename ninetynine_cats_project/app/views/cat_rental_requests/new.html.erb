<h1>Make Cat Request</h1>

<form action="/cat_rental_requests" method="post">
  
  <label>Choose Cat:
    <select name="cat_rental_request[cat_id]">
      <% Cat.all.each do |cat| %>
        <option value="<%= cat.id %>"> <%= cat.name %> </option>
      <% end %>
    </select>
  </label>
  <br>
  
  <label>Start Date:
    <input type="date" name="cat_rental_request[start_date]" value="">
  </label>
  <br>
  
  <label>End Date:
    <input type="date" name="cat_rental_request[end_date]" value="">
  </label>
  <br>
  
  <input type="submit" name="" value="Make Requests">
</form>